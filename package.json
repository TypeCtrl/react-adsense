{
  "name": "@ctrl/react-adsense",
  "version": "0.0.0-placeholder",
  "description": "Typescript adsense module",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "typectrl/react-adsense",
  "sideEffects": false,
  "keywords": [
    "typescript"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.ts, .",
    "lint:fix": "eslint --fix --ext .js,.ts, .",
    "prepare": "npm run build",
    "build": "pika build",
    "watch:demo": "parcel serve demo/index.html --open",
    "build:demo": "parcel build demo/index.html",
    "test": "jest",
    "test:update": "jest --update-snapshot",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit --coverage",
    "semantic-release": "cd pkg && semantic-release"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "tsconfig": "tsconfig.build.json"
        }
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "2.3.0",
    "@pika/pack": "0.5.0",
    "@pika/plugin-build-web": "0.9.2",
    "@pika/plugin-ts-standard-pkg": "0.9.2",
    "@testing-library/jest-dom": "5.11.0",
    "@testing-library/react": "10.4.4",
    "@types/jest": "26.0.3",
    "@types/node": "14.0.14",
    "@types/react": "16.9.41",
    "@typescript-eslint/eslint-plugin": "3.5.0",
    "@typescript-eslint/parser": "3.5.0",
    "autoprefixer": "9.8.4",
    "eslint": "7.4.0",
    "eslint-config-xo-react": "0.23.0",
    "eslint-config-xo-space": "0.25.0",
    "eslint-config-xo-typescript": "0.31.0",
    "eslint-plugin-react": "7.20.3",
    "eslint-plugin-react-hooks": "4.0.5",
    "jest": "26.1.0",
    "jest-junit": "11.0.1",
    "parcel": "1.12.4",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "semantic-release": "17.1.1",
    "tailwindcss": "1.4.6",
    "ts-jest": "26.1.1",
    "typescript": "3.9.6"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "master"
  }
}
